h1
  font-size 2.2rem

h2
  font-size 1.65rem
  padding-bottom .3rem
  border-bottom none

.sidebar-link
  text-transform capitalize

.sidebar-heading
  text-transform capitalize
  font-size 18px !important
  color gray !important
