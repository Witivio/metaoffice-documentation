.navbar .logo
  height 1.2rem !important
  vertical-align text-top !important


// Common for all page
.justify
  text-align center


@media (max-width 1200px)
  .video_embed
    width: 100%
    height: 100%

@media (min-width: 1200px)
  .theme-default-content:not(.custom) img
    max-width 100%